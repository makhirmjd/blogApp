<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/select2"
                android:id="@+id/postImage"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageProgressBar"
                android:layout_alignStart="@id/postImage"
                android:layout_alignEnd="@id/postImage"
                android:layout_alignTop="@id/postImage"
                android:layout_alignBottom="@id/postImage"
                android:indeterminate="true"
                android:visibility="gone"
                />

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Post Title"
            android:id="@+id/postTitle"
            android:padding="10dp"
            android:textSize="18dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/postDescription"
            android:hint="Post Description"
            android:padding="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/postUserName"
            android:hint="Post User Name"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:padding="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_like_gray"
                android:background="#00ffffff"
                android:layout_margin="10dp"
                android:id="@+id/likeButton"
                />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>